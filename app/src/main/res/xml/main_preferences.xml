<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="using_categories_in_root_screen"
    android:summary="Using Preference Categories"
    android:title="Categories">
    <PreferenceCategory
        android:title="基本设置">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="key_switch"
            android:summary="勾选后按当前配置启用夜间模式"
            android:title="总开关" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="time_switch"
            android:summary="勾选后设定时间段"
            android:title="定时开关" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="高级设置">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="setting_by_apps"
        android:title="自定义设置"
        android:summary="针对不同APP进行设置"/>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="switch_by_light_sensor"
            android:summary="在设定的开始时间前后十分钟之内，根据环境光的强弱自动开启夜间模式，而非在设定时间到达时切换。\n开启后可能导致耗电增大"
            android:title="根据环境光自动切换" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="其它">
        <Preference
            android:title="帮助"
            android:summary="切换开关后，需要重启应用才能变为夜间模式\n自动切换功能需要后台\n自动关闭后台需要root权限">
        </Preference>
        <Preference
            android:title="关于"
            android:summary="版本0.1.0\n第一次开发安卓应用，请多指教(*¯︶¯*)">
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>