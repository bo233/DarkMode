<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/single_set_hint"
        android:textAlignment="textStart"
        android:textSize="15sp" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/panelBackground"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_btn_mode_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/panelBackground"
            android:text="@string/mode_set"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_marginEnd="90dp"
            android:layout_toStartOf="@+id/dialog_btn_killer_setting"
            android:layout_toRightOf="@id/dialog_btn_killer_setting"
            android:layout_alignRight="@id/dialog_btn_killer_setting"/>

        <Button
            android:id="@+id/dialog_btn_killer_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="?android:attr/panelBackground"
            android:text="@string/kill_set"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <!--        <Button-->
<!--            android:id="@+id/dialog_btn_self_mode"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:background="?android:attr/panelBackground"-->
<!--            android:text="@string/self_mode_set"-->
<!--            android:textColor="@color/colorAccent"-->
<!--            android:textSize="15sp" />-->

    </RelativeLayout>

</LinearLayout>
